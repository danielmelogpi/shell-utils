
bldred=${txtbld}$(tput setaf 1); #  red
txtbld=$(tput bold);
txtrst=$(tput sgr0);
red=${bldred} ;
reset=${txtrst};

echo "$red > Updating sources...$reset";
git pull origin master;

echo "$red> Adding all the modifications zed master did $reset";
git add --all;


printf "$red Gibe commit message plox! \t>>\t\t $reset";
echo "";
read message;
echo "";
echo "Commiting changes";
git commit -m "{$message}";

printf "\n\n$red Updating changes to remote origin -> master $reset"
git push origin master;

printf "\n\n$txtbld Me did it! Me are good shell script, master! Gibe moar CPU! $reset";
echo "";