
bldred=${txtbld}$(tput setaf 1); #  red
txtrst=$(tput sgr0);
red=${bldred} ;
reset = "${txtrst}";

echo "$red";
echo "> Updating sources...";
echo "$reset";
git pull origin master;
echo "";
echo "> Adding all the modifications zed master did";
git add --all;
printf "Gibe commit message plox! \t>>\t\t";
read message;
echo ""
echo "Commiting changes";
git commit -m "{$message}";
echo "";
echo "Updating changes to remote origin->master"
git push origin master;
echo "";
echo "Me did it! Me good shell script, master! Gibe moar CPU!";
echo "";